<header>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav nav-pills">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span> 
        </button>

        <% if user_signed_in? %>

          <li><%= link_to "Home", root_path, class: 'logo' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Feeds<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Create new feed", new_feed_path %></li>
              <li><%= link_to "Create new category", new_category_path %></li>
              <li><%= link_to "Show all feeds", feeds_path %></li>
              <li><%= link_to "Import OPML File", new_opml_import_path %></li>
              <li><%= link_to "Favorites", favorites_path %></li>
              <li><%= link_to "Saved for later", saved_for_later_path %></li>
            </ul>
          </li>

          <div class="navbar-right">
            <div class="nav nav-pills">
              <li>
                <%= form_tag("/", method: "get") do %>
                <%= label_tag(:q) %>
                <%= text_field_tag(:q) %>
                <%= submit_tag("Search", id: "search-box") %>
                <% end %>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>
                  <li><%= link_to "Identities", "#" %></li>
                  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to sign out?" } %></li>
                </ul>
              </li>
            </div>
          </div>

        <% else %>
          <li><%= link_to "Home", root_path, class: 'logo' %></li>
          <div class="row">
            <div class="navbar-right">
              <div class="nav nav-pills">
                <li><%= link_to "Sign In", new_user_session_path %></li>
                <li><%= link_to "Sign Up", new_user_registration_path %></li>
                <li><%= link_to "Sign In With Google+", user_google_oauth2_omniauth_authorize_path %></li>
              </div>
            </div>
          </div>
        <% end%>
      </ul>
    </div>
  </nav>

</header>
