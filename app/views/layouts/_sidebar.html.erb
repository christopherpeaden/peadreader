<% if user_signed_in? %>
  <div class="panel panel-default">

    <div class="panel-heading">
      <div class="text-center">
        <h4><%= link_to "Categories", categories_path %></h4>
      </div>
    </div>

    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item"><%= link_to category.title, category, class: "btn" %>
          <ul>
            <% category.feeds.order(:title).each do |feed| %>
              <li><%= link_to feed.title, feed %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
