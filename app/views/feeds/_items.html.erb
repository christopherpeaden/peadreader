<%= will_paginate items %>

<ul class="list-group">
  <% items.each do |item| %>
    <li>
      <%= link_to image_tag(item.image_thumbnail_url, size: "300x200"), item.url if item.image_thumbnail_url %></br>
      <%= link_to "#{item.feed.title}: #{truncate(item.title, length: 115, omission: "...", escape: false) }", item.url, class: "feed-item" %> <%= link_to "More", feed_path(item.feed), class: "btn" if params[:id].nil? %></br>
      <%= "#{item.published.strftime("%B %d, %Y %l:%M %p")},  #{time_ago_in_words(item.published)} ago" %>
    </li>
  <% end %>
</ul>
