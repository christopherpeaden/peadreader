<div class="banner">
  <h1><%= feed.title %></h1>
    <%= link_to "Edit", edit_feed_path(feed), remote: true, class: "btn" %>
    <%= link_to "Delete", feed, remote: true, method: :delete,
                 data: { confirm: "Delete this feed?" }, class: "btn" %>
</div>

<%= link_to "Refresh", refresh_feeds_path(category_id: params[:category_id], id: params[:id]), remote: true, title: "Refresh current feeds", id: "refresh-btn" %>

<div id="items">
  <%= render "items", items: items %>
</div>

<%= will_paginate items %>
